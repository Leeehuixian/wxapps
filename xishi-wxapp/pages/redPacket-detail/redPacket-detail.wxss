.sender-info{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:100%;
  height:480rpx;
  background:#f32a43;
}

.sender-info .avatar{
  width:182rpx;
  height:182rpx;
  margin-bottom:20rpx;
  border-radius: 50%;
  border:1px solid #fff;
}

.sender-info .nickname{
  margin-bottom:50rpx;
  font-size:40rpx;
  color:#fff;
}

.sender-info .money{
  font-size:48rpx;
  color:#fff;
  margin-bottom:50rpx;
}

.sender-info .money text{
  font-size:100rpx;
  color:#fff;
}

.redPacket-info{
  width:100%;
  height:80rpx;
  box-sizing: border-box;
  padding-left:20rpx;
  line-height: 80rpx;
  font-size:30rpx;
  color:#969696;
}

.receive-list{
  width:100%;
  box-sizing: border-box;
  padding:0 20rpx;
}

.receive-item{
  display:flex;
  align-items: center;
  width:100%;
  height:140rpx;
  border-top:1px solid #ebebeb;
}

.recipient-avatar{
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
  border-radius: 10px;
  flex:none;
}

.recipient-info{
  display:flex;
  flex-flow: column wrap;
  justify-content: center;
  width:610rpx;
  height:100%;
}

.recipient-info view{
  display:flex;
  justify-content: space-between;
  line-height: 1.5;
}

.recipient-info .first-line{
  font-size:30rpx;
  color:#000;
}

.recipient-info .second-line{
  color:#969696;
  font-size:26rpx;
}





