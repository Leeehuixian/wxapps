page{
  height: 100%;
  position:relative;
}
/* pages/detail/detail.wxss */
.detail-container{
  height: 100%;
  position:relative;
  box-sizing: border-box;
  padding:0 10px;
}

.title{
  display:block;
  font-size:42rpx;
  margin:50rpx 0;
}

.second-line{
  display: flex;
  justify-content: space-between;
  width:100%;
  font-size:12px;
  line-height:2;
  margin-bottom:40rpx;
}

.flag-icon{
  width:32rpx;
  height:36rpx;
  vertical-align:middle;
  margin-right:5px;

}

.issue-info{
  color:#969696;
}

.read-num{
  color:#646464;
}

.read-icon{
  width:39rpx;
  height:22rpx;
  margin-right:5px;
}

.banner{
  width:100%;
  height:350rpx;
}

.banner image{
  width:100%;
  height:350rpx;
}

.content{
  padding:20px 0;
  font-size:16px;
  color:#000;
  line-height:1.5;
}

/*评论*/
.comment-section{
  width:100%;
  padding:40rpx 0 120rpx;
  border-top:1px solid #e6e6e6;
}

.comment-wrapper{
  width:100%;
}

.section-title{
  width:100%;
  font-size:14px;
  line-height: 14px;
  margin-bottom:40rpx;
}

.section-title{
  position:relative;
  width:100%;
  box-sizing: border-box;
  padding-left:10px;
}

.section-title::before{
  position:absolute;
  top:0;
  left:0;
  content:"";
  width:3px;
  height:14px;
  background:#f32a43;
}

.comment-list{
  width:100%;
}

.comment-item{
  display:flex;
  justify-content: space-between;
  width:100%;
  margin-bottom:60rpx;
}

.comment-avatar{
  margin-right:10px;
  flex:none; 
}

.comment-avatar image{
  width:70rpx;
  height:70rpx;
  border-radius: 50%;
}

.comment-content-wrapper{
  display: flex;
  flex-flow: column wrap;
  flex:none; 
  width:620rpx;
}

.first-line{
  display:flex;
  justify-content: space-between;
  line-height: 19px;
  margin-bottom:25rpx;
}

.comment-nickname{
  color:#38b2ff;
  font-size:14px;
}

.like-num{
  font-size:13px;
  color:#646464;
}

.like-num image{
  width:16px;
  height:17px;
  margin-right:10px;
}

.comment-content{
  font-size:13px;
  line-height: 1.5;
}

.last-line{
  display:flex;
  justify-content: space-between;
  align-items:center;
}

.delete-comment{
  font-size:14px;
  color:#38b2ff;
  text-decoration: underline;
}

.issue-time{
  font-size:12px;
  color:#969696;
  margin-top:5px;
}

.toolbar{
  position: fixed;
  left:0;
  bottom:0;
  z-index:100;
  display:flex;
  justify-content: space-around;
  align-items: center;
  width:100%;
  height:100rpx;
  background:#fff;
  box-sizing: border-box;
  padding:0 10px;
  border-top:1px solid #e6e6e6;
}

.toolbar image{
  width:44rpx;
  height:44rpx;
}

.input-wrapper{
  display: flex;
  align-items: center;
  width:330rpx;
  height:66rpx;
  box-sizing:border-box;
  line-height: 66rpx;
  padding-left:65rpx;
  font-size:13px;
  color:#969696;
  border-radius:20px;
  border:1px solid #e6e6e6;
  background:#f0f0f0 url("data:image/png;base64,") no-repeat 20rpx center;
  background-size:35rpx 34rpx;
}

.read-comment{
  position:relative;
  height:44rpx;
}

.comment-num{
  position:absolute;
  top:-10rpx;
  left:50%;
  z-index:101;
  width:50rpx;
  height:30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size:24rpx;
  color:#fff;
  border-radius: 20px;
  background: #f32a43;
}

.share-btn{
  position:initial;
  display:initial;
  width:44rpx;
  height:46rpx;
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;
  box-sizing:unset;
  border-radius:unset;
  -webkit-tap-highlight-color:transparent;
  overflow:unset;
  color:#000000;
  background-color:unset;
  background:url(data:image/png;base64,) no-repeat center; 
  background-size:44rpx;
}

.share-btn::after{
  content:" ";
  width:0;
  height:0;
  position:unset;
  top:0;
  left:0;
  -webkit-transform:none;
  transform:none;
  -webkit-transform-origin:unset;
  transform-origin:unset;
  box-sizing:unset;
  border-radius:unset;
  border:unset;
}

.modal-bg{
  position:fixed;
  left:0;
  top:0;
  z-index:200;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
}

.canvas-view{
  position: fixed;
  left:50%;
  top:100px;
  z-index:201;
  width:265px;
  height:376px;
  margin-left:-133px;
  border-radius: 10px;
  background:#fff;
}

.my-canvas{
  width:90%;
  height:90%;
  border:none;
  margin:10px auto;
}

.save-image{
  position: fixed;
  bottom:120px;
  left:50%;
  z-index:201;
  width:320rpx;
  height:80rpx;
  margin-left:-160rpx;
  text-align: center;
  line-height: 80rpx;
  background:#f32a43;
  color:#fff;
  font-size:32rpx;
  border-radius: 20px;
}











/*图片预览窗口*/
.preview-img{
  position:fixed;
  top:0;
  left:0;
  z-index:10;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
   display:none; 
}

.showCanvas{
  display:block;
}

.hideCanvas{
  display:none;
}
