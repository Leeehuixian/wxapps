page{
  width:100%;
  box-sizing: border-box;
  padding:40rpx 30rpx;
  background: #f7f7f7;
}

.container{
  width:100%;
}

.container .item{
  width:100%;
  background:#fff;
  margin-bottom:20rpx;
}

.q_wrap{
  display:flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:0 20rpx;
}

.q_wrap image{
  width:38rpx;
  height:30rpx;
}

.question{
  width:100%;
  height:100rpx;
  font-size:30rpx;
  line-height: 100rpx;
  color:#000;
}

.checked{
  opacity: .5;
}

.answer{
  width:100%;
  box-sizing: border-box;
  padding:20rpx 20rpx;
  border-top:1px solid #ebebeb;
  font-size:28rpx;
  line-height: 1.5;
  color:#000;
}

.show{
  display:block;
}

.hide{
  display:none;
}
