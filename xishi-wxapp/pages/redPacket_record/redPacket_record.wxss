.container{
  width:100%;
}

.top_bar{
  display:flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top:0;
  left:0;
  z-index:10;
  width:100%;
  height:100rpx;
  background:#fff;
  border-bottom:1px solid #ebebeb;
}

.top_bar view{
  flex:none;
  width:140rpx;
  height:100%;
  line-height:100rpx;
  text-align: center;
  font-size:32rpx;
  color:#000;
}

.top_bar .active{
  box-sizing: border-box;
  color:#f32a43;
  border-bottom:8rpx solid #f32a43;  
}

.summary_record{
  margin-top:100rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
  width:100%;
}

.user_avatar{
  margin-top:40rpx;
  margin-bottom:20rpx;
  width:120rpx;
  height:120rpx;
}

.user_avatar image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}

.total_record{
  display:flex;
  justify-content: space-around;
  align-items: center;
  width:100%;
  margin:80rpx 0;
  box-sizing: border-box;
  padding:0 100rpx;
}

.total_record view{
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  align-items: center;
  width:50%;
}

.record_list .record_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width:100%;
  height:120rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  border-bottom:1px solid #ebebeb;
}

.record_item view{
  display: flex;
  justify-content: space-between;
}

.function_bar{
  display:flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left:0;
  bottom:0;
  z-index:10;
  width:100%;
  height:110rpx;
  box-sizing: border-box;
  padding:8px 50rpx;
  background:#f5f5f5;
}

.function_bar view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  height:100%;
  font-size:24rpx;
  color:#969696;
}

.no-more{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:28rpx;
  color:#969696;
}













