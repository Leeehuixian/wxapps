/* pages/qrcode/qrcode.wxss */
page{
  background:#f5f5f5;
}
.usercodeinfo{
  display:flex;
  justify-content: center;
  align-items:center; 
  width:100%;
  height:100rpx;
  box-sizing:border-box;
  padding:0 20rpx;
  background:#fff;
}
.usercodeinfo-avatar{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.usercodeinfo-detail{
  flex:1;
  display:flex;
  flex-flow:column wrap;
  align-content: center;
}
.usercodeinfo-detail-firstline-name{
  font-size:36rpx;
  font-weight:400;
}
.usercodeinfo-detail-secondline{
  font-size:23rpx;
}
.usercodeinfo-detail-questionimg{
  width: 25rpx;
  height: 25rpx;
  vertical-align:top;
  margin-left:10rpx;
}
.usercodeinfo-qrcode-img {
  width: 50rpx;
  height: 50rpx;
}
.userintegral {
  width: 100%;
  padding: 50rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userintegral-text1{
  text-align:center;
  line-height:30rpx;
  margin-bottom:20rpx;

}
.userintegral-text2{
  display:flex;
  justify-content:center;
  align-items:center;
  margin-bottom:30rpx;
}
.userintegral-text2-text{
  font-size:48rpx;
}
.userintegral-text2-dot1,.userintegral-text2-dot2{
  display:inline-block;
  width:10rpx;
  height:10rpx;
  border-radius: 50%;
  background:#000;
}
.userintegral-text2-dot1:before{
  content: "";
  height: 1rpx;
  width: 180rpx;
  background: #6c6c6c;
  position: absolute;
  margin-top:5rpx;
  margin-left: -180rpx;
  margin-right: 5px;
}
.userintegral-text2-dot2:after {
  content: "";
  height: 1rpx;
  width: 180rpx;
  background: #6c6c6c;
  position: absolute;
  margin-top:5rpx;
  margin-left: 5px;
  margin-right: 5px;

}
