.userintegral-qrcode{
  display:flex;
  align-items:center;
  justify-content:center;
  width:100%;
  height:450rpx;
}
.userintegral-qrcode image{
  width:400rpx;
  height:400rpx;
}
.userintegral-button{
  width:90%;
  background:#ffdd78;
