/* pages/classfiy/classfiy.wxss */
page{
  background:#f5f5f5;
  height:100%;
}
/*总体盒子*/
.container_wrap{
  position:relative;
  width:100%;
  height:100%;
  background:#fff;
  color:#939393;
}
/*左侧栏主盒子*/
.nav_left{
  /*设置行内块级元素（没使用定位）*/
  display:inline-block;
  width:25%;
  height:100%;
  /*主盒子设置背景色为灰色*/
  background:#f5f5f5;
  text-align: center;
}
/*左侧栏list的item*/
.nav_left .nav_left_items{
  height:40px;
  line-height: 40px;
  padding:6px 0;
  border-bottom:1px solid #dedede;
  font-size:14px;
}
/*左侧栏list的item被选中时*/
.nav_left .nav_left_items.active{
  background:#fff;
  color:#f0145a;
}
/*右侧栏主盒子*/
.nav_right{
  /*右侧盒子使用了绝对定位*/
  position:absolute;
  top:0;
  right:0;
  flex:1;
  /*宽度75%，高度沾满，并使用百分比布局*/
  width:75%;
  height:100%;
  padding:10px;
  box-sizing: border-box;
  background:#fff;
}
/*右侧栏的item*/
.nav_right .nav_right_items{
  /*浮动向左*/
  float:left;
  width:33.33%;
  height:120px;
  text-align: center;
}
.nav_right .nav_right_items image{
  width:60px;
  height:60px;
  margin-top:15px;
}
.nav_right .nav_right_items text{
  display:block;
  margin-top:15px;
  font-size:14px;
  color:block;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.nodata_text{
  color:black;
  font-size:14px;
  text-align:center;
}



