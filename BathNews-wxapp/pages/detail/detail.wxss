/* pages/detail/detail.wxss */
.detail-container{
  box-sizing: border-box;
  padding:0 10px;
}

.banner{
  width:100%;
  height:350rpx;
  overflow: hidden;
}

.banner image{
  width:100%;
}

.title-autor{
  padding:15px 0;
  font-size:24px;
  font-weight:bold;
}

.author-msg{
  display:flex;
  box-sizing: border-box;
  padding:10px 0;
}

.author-img{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}

.share_btn{
  width:64rpx;
  height:64rpx;
  margin-left:450rpx;
}

.author-name{
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  box-sizing: border-box;
  padding-left:10px;
  font-size:12px;
  font-weight: normal;
  color:#969696;
}

.name-text{
  color:#000;
}

.content{
  padding:10px 0;
  font-size:16px;
  color:#000;
  line-height:1.5;
}

/*图片预览窗口*/
.preview-img{
  position:fixed;
  top:0;
  left:0;
  z-index:10;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
   display:none; 
}

.showCanvas{
  display:block;
}

.hideCanvas{
  display:none;
}

#myCanvas2{
  background:url(../images/authorImg.jpg) no-repeat;
  background-size:100%;
}