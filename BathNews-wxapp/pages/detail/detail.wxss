/* pages/detail/detail.wxss */
.detail-container{
  box-sizing: border-box;
  padding:0 10px;
}

.banner{
  width:100%;
  height:350rpx;
  overflow: hidden;
}

.banner image{
  width:100%;
}

.title-autor{
  padding:15px 0;
  font-size:24px;
  font-weight:bold;
}

.author-msg{
  display:flex;
  box-sizing: border-box;
  padding:10px 0;
}

.author-img{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}

.author-name{
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  box-sizing: border-box;
  padding-left:10px;
  font-size:12px;
  font-weight: normal;
  color:#969696;
}

.name-text{
  color:#000;
}

.content{
  padding:10px 0;
  font-size:16px;
  color:#000;
  line-height:1.5;
}