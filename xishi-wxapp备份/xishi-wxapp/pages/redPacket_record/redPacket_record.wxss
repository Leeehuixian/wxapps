.container{
  width:100%;
}

.top_bar{
  display:flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top:0;
  left:0;
  z-index:10;
  width:100%;
  height:100rpx;
  background:#fff;
  border-bottom:1px solid #ebebeb;
}

.top_bar view{
  flex:none;
  width:140rpx;
  height:100%;
  line-height:100rpx;
  text-align: center;
  font-size:32rpx;
  color:#000;
}

.top_bar .active{
  box-sizing: border-box;
  color:#f32a43;
  border-bottom:8rpx solid #f32a43;  
}

.summary_record{
  margin-top:100rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
  width:100%;
}

.user_avatar{
  margin-top:40rpx;
  margin-bottom:20rpx;
  width:120rpx;
  height:120rpx;
}

.user_avatar image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}

.total_record{
  display:flex;
  justify-content: space-around;
  align-items: center;
  width:100%;
  margin:80rpx 0;
  box-sizing: border-box;
  padding:0 100rpx;
}

.total_record view{
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  align-items: center;
  width:50%;
}

.record_list .record_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width:100%;
  height:120rpx;
  box-sizing: border-box;
  padding:0 20rpx;
  border-bottom:1px solid #ebebeb;
}

.record_item view{
  display: flex;
  justify-content: space-between;
}

.function_bar{
  display:flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left:0;
  bottom:0;
  z-index:10;
  width:100%;
  height:110rpx;
  box-sizing: border-box;
  padding:8px 50rpx;
  background:#f5f5f5;
}

.function_bar view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  height:100%;
  font-size:24rpx;
  color:#969696;
}

.no-more{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:28rpx;
  color:#969696;
}

/*遮罩层*/
.modal-bg{
  position:fixed;
  left:0;
  top:0;
  z-index:200;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
}

.canvas-view{
  position:fixed;
  left:50%;
  top:40rpx;
  z-index:201;
  width:265px;
  height:429px;
  margin-left:-132.5px;
  border-radius:10px;
  background:#fff;
}

.my-canvas{
  width:239px;
  height:416px;
  background:#fff;
  border:none;
  margin:13px auto;
}

.save-image{
  position: fixed;
  bottom:50rpx;
  left:50%;
  z-index:201;
  width:380rpx;
  height:80rpx;
  margin-left:-190rpx;
  text-align: center;
  line-height: 80rpx;
  background:#f32a43;
  color:#fff;
  font-size:32rpx;
  border-radius: 20px;
}

/*公众号二维码*/
.code_wrap{
  position: fixed;
  top:200rpx;
  left:80rpx;
  z-index:201;
  width:590rpx;
  height:580rpx;
}

.code_wrap .code_img{
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:380rpx;
  background: #f5f5f5;
}

.code_wrap .code_txt{
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:200rpx;
  background: #fff;
  font-size: 30rpx;
}














