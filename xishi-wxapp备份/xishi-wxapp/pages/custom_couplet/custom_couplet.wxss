.container{
  width:100%;
}

.check_custom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  height:100rpx;
  box-sizing: border-box;
  padding:0 30rpx;
  font-size:32rpx;
  color:#323232;
}

.editor_box{
  width:100%;
  box-sizing: border-box;
  padding:0 30rpx;
}

.editor_box view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:60rpx;
}

.editor_box view text{
  flex:none;
  font-size:32rpx;
  color:#323232;
  margin-right:20rpx;
}

.editor_box view input{
  width:690rpx;
  border-bottom:1px solid #ebebeb;
  font-size:30rpx;
}

.txt_list{
  padding-bottom:200rpx;
  width:100%;
}

.txt_item{
  display:flex;
  align-items: center;
  width:100%;
  height:200rpx;
  box-sizing: border-box;
  padding:0 30rpx;
  border-top:1px solid #ebebeb;
}

.txt_item view{
  display:flex;
  flex-direction: column;
  justify-content: center;
}

.txt_item image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right:20rpx;
}

.txt_item text{
  font-size:32rpx; 
  line-height: 1.5;
}

.sure_btn{
  position: fixed;
  left:0;
  bottom:0;
  z-index:10;
  display:flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:80rpx;
  padding:40rpx 0;
  background: #fff;
}

.sure_btn view{
  width:570rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:38rpx;
  color:#fff;
  border-radius: 20px;
  background: #f32a43;
}


