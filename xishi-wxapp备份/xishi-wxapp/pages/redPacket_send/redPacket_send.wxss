page{
  width:100%;
  height:100%;
  box-sizing: border-box;
  padding:0 30rpx;
  background: #f3f5f9;
}

.container{
  width:100%;
  height:100%;
}

.editor_box{
  position: fixed;
  top:96rpx;
  bottom:160rpx;
  left:30rpx;
  z-index:10;
  width:690rpx;
  box-sizing: border-box;
  padding:0 60rpx;
  background: #fff;
  box-shadow: 1px -1px 10px 1px rgba(0,0,0,.2);  
}

.sender_avatar{
  position: fixed;
  top:32rpx;
  left:50%;
  z-index:11;
  margin-left:-75rpx;
}

.sender_avatar image{
  width:130rpx;
  height:130rpx;
  border-radius: 50%;
  border:5px solid #fff;
}

.record_btn{
  display:flex;
  width:570rpx;
  height:88rpx;
  border-radius:5px;
  margin:150rpx auto 60rpx;
  justify-content: center;
  align-items: center;
  color:#fff;
  font-size:38rpx;
  background:#1aac19;
}

.record_btn .btn{
  flex:1;
  display:flex;
  justify-content: center;
  align-items:center;
  height:100%;
}

.record_btn .kerley{
  width:2rpx;
  height:71rpx;
  background:#fff;
}
.record_btn view image{
  width: 55rpx;
  height:55rpx;
  margin-right:14rpx;
}

.speak-style{  
    position: relative;  
    height: 240rpx;  
    width: 240rpx;  
    border-radius: 20rpx;  
    margin: 50% auto;  
    background:rgba(0,0,0,.6);
    z-index:300;
} 

.sound-style{  
  position: absolute;  
  width: 74rpx;  
  height:150rpx;  
  margin-top: 45rpx;  
  margin-left: 83rpx;  
}   

.editor_input{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:50rpx;
}

.editor_input text{
  width:180rpx;
  font-size:32rpx;
  color:#323232;
  margin-right:30rpx;
}

.editor_input input{
  width:360rpx;
  border:none;
  border-bottom:1px solid #c8c8c8;
  padding-bottom:10rpx;
  font-size:32rpx;
}

.editor_input view{
  width:390rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
  color:#323232;
}

.editor_input view text{
  width:340rpx;
  line-height: 1.5;
  margin-right:0;
}

.editor_input view image{
  width:20rpx;
  height:38rpx;
}

.tip_txt{
  display: block;
  margin-top:30rpx;
  margin-bottom:40rpx;
  font-size:24rpx;
  color:#969696;
  text-align: center;
}

.submit_btn{
  width:570rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:38rpx;
  color:#fff;
  background: #f32a43;
  border-radius: 20px;
  margin-bottom:20rpx;
}
.agreement{
  display: flex;
  font-size:22rpx;
  color:#969696;
}

.agreement image{
  width:30rpx;
  height:30rpx;
  margin-right:20rpx;
}

.function_bar{
  position: fixed;
  left:0;
  bottom:0;
  z-index:10;
  width:100%;
  height: 120rpx;
  background: #fff;
  box-sizing: border-box;
  padding:0 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.function_bar view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size:24rpx;
  color:#828282;
}

/*遮罩层*/
.modal-bg{
  position:fixed;
  left:0;
  top:0;
  z-index:200;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
}

.code_wrap{
  position: fixed;
  top:200rpx;
  left:80rpx;
  z-index:201;
  width:590rpx;
  height:580rpx;
}

.code_wrap .code_img{
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:380rpx;
  background: #f5f5f5;
}

.code_wrap .code_txt{
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:200rpx;
  background: #fff;
  font-size: 30rpx;
}











