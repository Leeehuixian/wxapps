page{
  width:100%;
  height:100%;
}

/*背景*/
.container{
  width:100%;
  height:100%;
}

.container .bg{
  position: fixed;
  left:0;
  top:0;
  bottom:0;
  z-index:10;
  width:100%;
  height:100%;
}

/*横批*/
.top_roll{
  position:fixed;
  left:50%;
  top:80rpx;
  z-index:10;
  color:#ffffc6;
  line-height:1;
  font-family:'华文中宋';
  font-weight:bold;
  width:300rpx;
  text-align:center;
  margin-left:-150rpx;
}

.vertical_roll{
  position:fixed;
  top:70rpx;
  z-index:10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:138rpx;
  height:540rpx;
  box-sizing: border-box;
  padding:0 40rpx;
  line-height: 1.2;
  color:#ffffc6;
  font-family:'华文中宋';
  font-weight: bold;
}

.left_roll{
  left:40rpx;
}

.right_roll{
  right:40rpx;
}

/*拆红包按钮*/
.open_redPacket{
  position:fixed;
  left:249rpx;
  bottom:180rpx;
  z-index:10;
  width:210rpx;
  height:210rpx;
  border-radius: 50%;
  border:5px solid #ffd800;
}

.open_redPacket image{
  width:100%;
  height:100%;
  border-radius: 50%;
}

/*转发按钮*/
.transmit_btn{
  position: fixed;
  left:0;
  bottom:60rpx;
  z-index:10;
  width:100%;
  height:80rpx;
  display:flex;
  justify-content: space-around;
  align-items: center;
}

.transmit_btn view{
  width:310rpx;
  height:100%;
  border-radius: 20px;
  font-size:32rpx;
  text-align: center;
  line-height: 80rpx;
}

.share-btn{
  position:unset;
  display:block;
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;
  box-sizing:border-box;
  font-size:32rpx;
  text-align:center;
  text-decoration:none;
  line-height:80rpx;
  border-radius:20px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#fff;
  background-color:#1aae19;
  width:310rpx;
  height:80rpx;
}

.share-btn::after{
  content:" ";
  width:0;
  height:0;
  position:unset;
  top:0;
  left:0;
  -webkit-transform:none;
  transform:none;
  -webkit-transform-origin:unset;
  transform-origin:unset;
  box-sizing:unset;
  border-radius:unset;
  border:unset;
}

/*canvas窗口*/
.modal-bg{
  position:fixed;
  left:0;
  top:0;
  z-index:200;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
}

.canvas-view{
  position:fixed;
  left:50%;
  top:50rpx;
  z-index:201;
  width:265px;
  height:411px;
  margin-left:-132.5px;
  border-radius:10px;
  background:#fff;
}

.my-canvas{
  width:239px;
  height:385px;
  background:#fff;
  border:none;
  margin:13px auto;
}

.save-image{
  position: fixed;
  bottom:50rpx;
  left:50%;
  z-index:201;
  width:380rpx;
  height:80rpx;
  margin-left:-190rpx;
  text-align: center;
  line-height: 80rpx;
  background:#f32a43;
  color:#fff;
  font-size:32rpx;
  border-radius: 20px;
}






